# Spun Web Archive Forge MCP Server Configuration Example
# Copy this file to mcp-server.conf and customize for your environment

[server]
# MCP Server Configuration
name = "Spun Web Archive Forge MCP Server"
version = "1.0.0"
description = "Professional WordPress Plugin Development and Management Server"
author = "Ryan Dickie Thompson"
company = "Spun Web Technology"
license = "GPL v2 or later"

# Server Settings
host = "localhost"
port = 3000
debug = true
log_level = "INFO"
max_connections = 100
timeout = 300

[wordpress]
# WordPress Configuration
wp_path = "C:/Users/disru/Studio/plugin-test"
wp_url = "http://localhost:8881"
wp_admin_user = "admin"
wp_admin_password = "TCeglApnp@Ef29JVWrx6xIQn"
wp_cli_path = "wp"

# Plugin Development Paths
plugin_development_path = "C:/Users/disru/Documents/wordpress plugins/Spun Web Archive Forge Cursor 2"
repository_path = "C:/Users/disru/Documents/wordpress plugins/Spun Web Archive Forge Repository"
backup_path = "C:/Users/disru/Documents/wordpress plugins/backups"

# Plugin Information
plugin_name = "Spun Web Archive Forge"
plugin_slug = "spun-web-archive-forge"
plugin_version = "1.0.7"
plugin_author = "Ryan Dickie Thompson"
plugin_author_uri = "https://www.spunwebtechnology.com"
plugin_uri = "https://www.spunwebtechnology.com/spun-web-archive-forge-wordpress-wayback-archive/"
plugin_description = "Professional WordPress plugin for automatically submitting content to the Internet Archive (Wayback Machine)"

[archive]
# Archive.org API Configuration
api_base_url = "https://web.archive.org/save/"
availability_url = "https://archive.org/wayback/available"
s3_test_url = "https://s3.us.archive.org/"
api_timeout = 30
max_retries = 3
rate_limit_delay = 1

# Archive.org Credentials (will be loaded from WordPress options)
access_key = ""
secret_key = ""
callback_token = ""

[irc]
# IRC Bot Configuration
server = "irc.libera.chat"
port = 6667
nickname = "spun_web"
channels = ["#spunwebtechnology"]
password = ""
ssl = false
auto_rejoin = true
debug = true

# IRC Bot Features
enable_wordpress_integration = true
enable_archive_commands = true
enable_queue_monitoring = true
enable_status_reports = true

[database]
# Database Configuration
host = "localhost"
port = 3306
database = "wordpress_test"
username = "root"
password = ""
charset = "utf8mb4"

# Plugin Tables
submissions_table = "wp_swap_submissions_history"
queue_table = "wp_swap_archive_queue"
memory_log_table = "wp_swap_memory_log"

[development]
# Development Settings
php_path = "php"
composer_path = "composer"
node_path = "node"
npm_path = "npm"
git_path = "git"

# Code Quality Tools
phpstan_path = "vendor/bin/phpstan"
phpcs_path = "vendor/bin/phpcs"
phpcbf_path = "vendor/bin/phpcbf"

# Testing Configuration
test_timeout = 60
test_iterations = 10
test_scenarios = ["activation", "deactivation", "frontend_load", "admin_load"]

[security]
# Security Settings
enable_nonce_verification = true
enable_capability_checks = true
enable_input_sanitization = true
enable_output_escaping = true
enable_sql_injection_prevention = true

# File Security
allowed_file_extensions = [".php", ".js", ".css", ".json", ".md", ".txt"]
max_file_size = 10485760  # 10MB
scan_for_malware = true

[performance]
# Performance Settings
enable_caching = true
cache_ttl = 3600
enable_compression = true
enable_minification = true

# Memory Management
memory_limit = "256M"
max_execution_time = 300
max_memory_usage = 0.9  # 90% of available memory

# Queue Processing
batch_size = 10
processing_interval = 300  # 5 minutes
max_concurrent_requests = 3

[logging]
# Logging Configuration
log_file = "mcp-server.log"
log_level = "INFO"
log_format = "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
max_log_size = 10485760  # 10MB
backup_count = 5

# Log Categories
log_requests = true
log_responses = true
log_errors = true
log_performance = true
log_security = true

[backup]
# Backup Configuration
enable_automatic_backups = true
backup_interval = 86400  # 24 hours
backup_retention_days = 30
include_database = true
include_uploads = true
include_plugins = true
include_themes = true

# Backup Compression
compression_level = 6
compression_format = "zip"

[deployment]
# Deployment Configuration
enable_ssh_deployment = true
ssh_timeout = 30
ssh_retry_attempts = 3

# Remote Servers
production_server = ""
staging_server = ""
development_server = ""

[monitoring]
# Monitoring Configuration
enable_health_checks = true
health_check_interval = 300  # 5 minutes
enable_performance_monitoring = true
enable_error_tracking = true

# Alerts
enable_email_alerts = false
enable_irc_alerts = true
alert_thresholds = {
    "error_rate": 0.05,  # 5%
    "response_time": 5.0,  # 5 seconds
    "memory_usage": 0.8   # 80%
}

[integrations]
# Third-party Integrations
enable_slack = false
enable_discord = false
enable_telegram = false
enable_webhooks = true

# API Integrations
enable_github_integration = false
enable_gitlab_integration = false
enable_bitbucket_integration = false

[branding]
# Branding Configuration
company_name = "Spun Web Technology"
company_url = "https://spunwebtechnology.com"
support_email = "support@spunwebtechnology.com"
support_phone = "+1 (888) 264-6790"
support_irc_channel = "#spunwebtechnology"
support_irc_server = "irc.libera.chat"

# Plugin Branding
plugin_branding = "Spun Web Archive Forge"
plugin_tagline = "Professional WordPress Archive Solution"
plugin_color = "#0073aa"
plugin_icon = "dashicons-archive"

[features]
# Feature Flags
enable_auto_submission = true
enable_individual_submission = true
enable_bulk_submission = true
enable_queue_management = true
enable_submission_history = true
enable_widgets = true
enable_shortcodes = true
enable_api_integration = true
enable_irc_bot = true
enable_memory_monitoring = true
enable_performance_optimization = true

# Advanced Features
enable_custom_post_types = true
enable_category_exclusion = true
enable_scheduled_submission = true
enable_retry_logic = true
enable_error_recovery = true
enable_analytics = true
enable_reporting = true

[compatibility]
# Compatibility Settings
min_wordpress_version = "5.0"
max_wordpress_version = "6.8.2"
min_php_version = "7.4"
max_php_version = "8.2"
tested_up_to = "6.8.2"

# Browser Compatibility
min_chrome_version = "90"
min_firefox_version = "88"
min_safari_version = "14"
min_edge_version = "90"

[documentation]
# Documentation Configuration
enable_auto_docs = true
docs_format = "markdown"
docs_include_api = true
docs_include_examples = true
docs_include_changelog = true

# Documentation Paths
docs_source_path = "docs/"
docs_output_path = "docs/generated/"
docs_template_path = "docs/templates/"

[testing]
# Testing Configuration
enable_unit_tests = true
enable_integration_tests = true
enable_performance_tests = true
enable_security_tests = true

# Test Coverage
min_coverage_percentage = 80
test_timeout = 60
test_retry_attempts = 3

# Test Data
test_database_prefix = "test_"
test_file_prefix = "test_"
cleanup_after_tests = true
